# API Keys
# Gemini API (Google AI Studio) - 기본 사용
GEMINI_API_KEY=your_gemini_api_key_here

# Perplexity API - 대체 옵션
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# KOPIS API - 필수
KOPIS_API_KEY=your_kopis_api_key_here

# Musixmatch API - 선택사항 (가사 수집용)
MUSIXMATCH_API_KEY=your_musixmatch_api_key_here

# API 선택 설정
# true: Gemini API 사용 (기본값)
# false: Perplexity API 사용
USE_GEMINI_API=true

# Gemini 검색 설정
# true: Google Search grounding 사용 (기본값, 실시간 검색)
# false: 일반 모델 사용 (학습 데이터만)
GEMINI_USE_SEARCH=true

# Gemini 모델 버전 (기본값: 2.0)
GEMINI_MODEL_VERSION=2.0

# MySQL Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=livith_data
DB_PORT=3306

# 출력 디렉토리
OUTPUT_DIR=output

# 로깅 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API 요청 설정
REQUEST_DELAY=2  # API 요청 간 대기 시간 (초)
MAX_RETRIES=3    # 실패 시 재시도 횟수
TIMEOUT=30       # 요청 타임아웃 (초)